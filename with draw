public class Main
{
        double balance;
        void addBalance(double value)
    {
        balance = balance+value;
    }
    double getBalance()
    {
        return balance;
    }
    void withdraw(double value)
    {
        balance= balance-value;
    }
	public static void main(String[] args) {
		Main acc = new Main();
		acc.addBalance(1000);
		acc.addBalance(acc.getBalance()*2);
		System.out.println(acc.getBalance());
		acc.withdraw(500);
		System.out.println(acc.getBalance());
		
	}
}
